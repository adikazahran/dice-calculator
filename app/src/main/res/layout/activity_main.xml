<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/labelNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_saya"
        android:textColor="@color/white"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hobby_saya"
        android:textColor="@color/hijau"
        android:background="@color/purple"
        android:layout_marginBottom="84dp"
        app:layout_constraintTop_toBottomOf="@id/labelNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@color/merah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/labelNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/dadu1" />

        <!-- LinearLayout untuk tombol-tombol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">  <!-- Untuk arahkan tombol -->

            <Button
                android:id="@+id/tombolGanti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti Gambar" />

            <Button
                android:id="@+id/tombolNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Gambar"
                android:layout_marginStart="10dp" />

            <Button
                android:id="@+id/gotoHalaman2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halaman 2"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tombolNext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
